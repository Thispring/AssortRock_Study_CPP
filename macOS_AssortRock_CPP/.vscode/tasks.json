{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Build C++",
			"type": "shell",
			"command": "g++-15",
			"args": [
				"-std=c++17",
				"-g",
				"${fileDirname}/*.cpp",
				"-o",
				"${fileDirname}/program"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": ["$gcc"]
		}
	]
}